<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Bloombase.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Bloombase"
    Shell.FlyoutBehavior="Disabled"
    Title="Bloombase">
	<TabBar>
		<ShellContent
			Title="Home"
			ContentTemplate="{DataTemplate local:MainPage}"
			Route="MainPage" />

		<ShellContent
			Title="Employees"
			ContentTemplate="{DataTemplate local:Pages.OverviewPage}"
			Route="Pages.OverviewPage" />

		<ShellContent
			Title="Tasks"
			ContentTemplate="{DataTemplate local:Pages.PersonalPage}"
			Route="Pages.PersonalPage" />
		
		<ShellContent
			Title="Plants"
			ContentTemplate="{DataTemplate local:Pages.PlantPage}"
			Route="Pages.PlantPage" />

		<ShellContent
			Title="Planting Flowerbeds"
			ContentTemplate="{DataTemplate local:Pages.MapPage}"
			Route="MapPage" />
	</TabBar>
</Shell>
